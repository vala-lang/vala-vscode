{
  "name": "vala",
  "displayName": "Vala",
  "description": "Syntax highlighting and language support for the Vala / Genie languages",
  "version": "1.0.5",
  "publisher": "prince781",
  "author": {
    "name": "Princeton Ferro",
    "email": "princetonferro@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.36.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prince781/vala-vscode.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "images/vala.png",
  "main": "./out/main.js",
  "activationEvents": [
    "onLanguage:vala",
    "onLanguage:genie"
  ],
  "contributes": {
    "languages": [
      {
        "id": "vala",
        "aliases": [
          "Vala",
          "vala"
        ],
        "extensions": [
          ".vala",
          ".vapi"
        ],
        "configuration": "./language-configuration-vala.json"
      },
      {
        "id": "genie",
        "aliases": [
          "Genie",
          "genie"
        ],
        "extensions": [
          ".gs"
        ],
        "configuration": "./language-configuration-genie.json"
      }
    ],
    "grammars": [
      {
        "language": "vala",
        "scopeName": "source.vala",
        "path": "./syntaxes/vala.tmLanguage"
      },
      {
        "language": "genie",
        "scopeName": "source.genie",
        "path": "./syntaxes/genie.tmLanguage"
      }
    ],
    "problemPatterns": [
      {
        "name": "valac",
        "regexp": "^(.*?):(\\d+)[:\\.](\\d+)(?:-(\\d+)\\.(\\d+))?:\\s+(warning|error):\\s+(.*)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "endLine": 4,
        "endColumn": 5,
        "severity": 6,
        "message": 7
      }
    ],
    "problemMatchers": [
      {
        "name": "valac",
        "owner": "vala",
        "fileLocation": "absolute",
        "pattern": "$valac"
      }
    ],
    "breakpoints": [
      {
        "language": "vala"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Vala / Genie Settings",
      "properties": {
        "vls.languageServerPath": {
          "type": "string",
          "description": "Binary name or path to language server",
          "default": ""
        },
        "vls.debugMode": {
          "type": "boolean",
          "description": "Whether to start the server in debug mode (`G_MESSAGES_DEBUG=all`)",
          "default": false
        },
        "vls.failOnCriticals": {
          "type": "boolean",
          "description": "Whether the server should fail on GLib critical messages (`G_DEBUG=fatal-criticals`)",
          "default": false
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^5.2.1",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^10.12.12",
    "@types/vscode": "^1.34.0",
    "typescript": "^3.2.2",
    "@types/which": "^1.3.2"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  }
}
